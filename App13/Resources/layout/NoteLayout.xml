
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
   >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toptable"
      
        >
    <ImageButton
        android:src="@drawable/setimg"
        android:id="@+id/settingsbut"
            android:layout_width="35dp"
            android:layout_height="45dp"
             android:scaleType="fitXY"
         android:background="@null"
           android:tint="@drawable/default_button_selector"
        android:layout_alignParentLeft="true"

    
   />
        
    <ImageButton
        
      android:src="@drawable/accept"
          android:layout_width="35dp"
            android:layout_height="45dp"
            android:id="@+id/savebut"
      android:scaleType="fitXY"
         android:background="@null"
        android:layout_alignParentRight="true"
       android:tint="@drawable/default_button_selector"
           
     />
      
    </RelativeLayout
                    >
       
 <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/toptable"
       android:layout_above="@+id/botpanel">
    <EditText       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
       android:inputType="textMultiLine"
        android:fontFamily="sans-serif"
       android:textSize="25dp"
      
        
        
       
 	/>
       
    </ScrollView>
<RelativeLayout
    android:fitsSystemWindows="true"
    android:id="@+id/botpanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
        >
   <Button
        android:text="Settings"
        android:id="@+id/but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
   />
    <Button
        android:text="Save" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
   />
  </RelativeLayout>

</RelativeLayout>