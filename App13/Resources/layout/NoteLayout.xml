
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
   >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toptable"
      
   >
        
    <ImageButton        
      android:src="@drawable/accept"
          android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:id="@+id/savebut"
      android:scaleType="fitXY"
         android:background="@null"
        android:layout_alignParentRight="true"
       android:tint="@drawable/default_button_selector"
           
     />
      
    </RelativeLayout>
       
 <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       
       android:layout_below="@+id/toptable"
       android:layout_above="@+id/botpanel"
        >
    <EditText       
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:layout_marginTop="10dp"
        android:id="@+id/editText1"
           
       android:inputType="textMultiLine"
        android:fontFamily="sans-serif"
       android:background="@null"
       android:textSize="25dp"
      
  
        
      />
       
    </ScrollView>

             
        <LinearLayout
                        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/botpanel"      
       
        >
    <ImageButton
        android:src="@drawable/setimg"
        android:id="@+id/setimg"
        
            style="@style/mystyle"
            android:layout_marginBottom="2dp"
     android:layout_marginHorizontal="25dp"
             android:scaleType="fitXY"
         android:background="@null"
           android:tint="@drawable/default_button_selector"
        android:layout_alignParentLeft="true"
      
    
   />
   <ImageButton
            android:src="@drawable/settings"
        android:text="Settings"
            
            style="@style/mystyle"
            android:layout_marginBottom="2dp"
       android:layout_marginHorizontal="25dp"
             android:scaleType="fitXY"
       android:background="@null"
           android:tint="@drawable/default_button_selector"
        android:layout_alignParentLeft="true"
   />
    <ImageButton
       android:src="@drawable/clock"
      android:id="@+id/notification"
        android:layout_alignParentRight="true"
            style="@style/mystyle"
            android:layout_marginBottom="2dp"
          android:layout_marginHorizontal="25dp"
             android:scaleType="fitXY"
       android:background="@null"
             android:tint="@drawable/default_button_selector"
        android:layout_alignParentLeft="true"
   />
           <ImageButton
       android:src="@drawable/share"
        android:id="@+id/share_but"
        android:layout_alignParentRight="true"
           style="@style/mystyle"
            android:layout_marginBottom="2dp"
            android:layout_marginHorizontal="25dp"
             android:scaleType="fitXY"
       android:background="@null"
             android:tint="@drawable/default_button_selector"
        android:layout_alignParentLeft="true"
   />
        </LinearLayout>


</RelativeLayout>